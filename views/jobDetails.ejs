<div class="container mt-4">
  <h2>Job Details</h2>
  <% if(job){ %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= job.title %></h5>
      <p class="card-text">Category: <%= job.category %></p>
      <p class="card-text">Company: <%= job.company %></p>
      <p class="card-text">Location: <%= job.location %></p>
      <p class="card-text">Package: <%= job.package %></p>
      <p class="card-text">Posted On: <%= job.creationDate %></p>
      <p class="card-text">Apply Within: <%= job.applyBy %></p>
      <p class="card-text">Vacancy: <%= job.openings %></p>
      <p class="card-text">Skills Required: <%= job.skillsRequired %></p>
      <a href="/jobs/<%= job.id %>/applicants" class="btn btn-outline-success rounded-pill">
        <p class="card-text">Applicants: <%= job.applicants.length %></p>
      </a>
      <a href="/apply/<%= job.id %>" class="btn btn-primary float-right rounded-pill">Apply Now</a>
    </div>
  </div>
  <br>
  <% if (locals.userEmail) { %>
  <div>
    <a href="/jobs/<%= job.id %>/edit" class="btn btn-primary rounded-pill">Edit</a>
    <button type="submit" class="btn btn-danger rounded-pill" onclick="deleteJob('<%= job.id %>')">Delete</button>
  </div>
  <% } %>
  <% } %>
</div>